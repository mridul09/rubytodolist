<h2>Todolists List</h2>
  <div class="todolist-block">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th class="col-md-2">Status</th>
          <% @users.each  do |user|%>
            <th class="col-md-2"><%= user.username%></th>
          <%end%>
        </tr>
      </thead>

      <tbody>
          <tr>
            <td>New</td>
            <%@hash_new.each do |key, value| %>
              <td class="col-md-2">
                <%= 
                  value.each do |list| 
                    list
                  end
                  %>
              </td>
            <%end%>
          </tr>
          <tr>
            <td>In Progress</td>
            <%@hash_inProg.each do |key, value| %>
              <td class="col-md-2">
                <%= 
                  value.each do |list| 
                    list
                  end
                  %>
              </td>
            <%end%>
          </tr>
          <tr>
              <td>Done</td>
              <%@hash_Done.each do |key, value| %>
                <td class="col-md-2">
                  <%= 
                    value.each do |list| 
                      list
                    end
                  %>
                </td>
              <%end%>
            </tr>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Todolist', new_todolist_path, class: "btn btn-primary" %>
